<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Articles</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
        <td><%= user.username %></td>
        <td><%= user.article.count %></td>
        <td><%= button_to 'View Profile', user_path(user), method: :get %></td>
        <% if logged_in? && (current_user.id == user.id || current_user.admin?) %>
            <td><%= button_to 'Edit Profile', edit_user_path(user), method: :get %></td>
        <% end %>
        <% if logged_in? && current_user.admin? %>
            <td><%= button_to 'Delete Profile', user_path(user), method: :delete %></td>
        <% end %>
        </tr>
        <% end %>
    </tbody>
</table>